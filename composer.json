{
    "name": "desterroshop/laravel-whatsapp",
    "description": "Integração Laravel com API WhatsApp",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "DesterroShop",
            "email": "dev@desterroshop.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0|^9.0|^10.0",
        "illuminate/http": "^8.0|^9.0|^10.0",
        "illuminate/config": "^8.0|^9.0|^10.0",
        "illuminate/console": "^8.0|^9.0|^10.0",
        "illuminate/database": "^8.0|^9.0|^10.0",
        "illuminate/queue": "^8.0|^9.0|^10.0",
        "illuminate/events": "^8.0|^9.0|^10.0",
        "nesbot/carbon": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "orchestra/testbench": "^6.0|^7.0|^8.0",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "DesterroShop\\LaravelWhatsApp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DesterroShop\\LaravelWhatsApp\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DesterroShop\\LaravelWhatsApp\\LaravelWhatsAppServiceProvider"
            ],
            "aliases": {
                "WhatsApp": "DesterroShop\\LaravelWhatsApp\\Facades\\WhatsApp"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
} 