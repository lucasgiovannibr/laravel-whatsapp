{
    "name": "lucasgiovanni/laravel-whatsapp",
    "description": "Pacote de integração Laravel com a API WhatsApp",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Lucas Giovanni",
            "email": "contato@lucasgiovanni.com.br"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/http": "^10.0|^11.0",
        "illuminate/notifications": "^10.0|^11.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "DesterroShop\\LaravelWhatsApp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DesterroShop\\LaravelWhatsApp\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DesterroShop\\LaravelWhatsApp\\WhatsAppServiceProvider"
            ],
            "aliases": {
                "WhatsApp": "DesterroShop\\LaravelWhatsApp\\Facades\\WhatsApp"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
} 